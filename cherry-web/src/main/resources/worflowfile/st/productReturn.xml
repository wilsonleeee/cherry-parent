<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow PUBLIC "-//OpenSymphony Group//DTD OSWorkflow 2.8//EN" "http://www.opensymphony.com/osworkflow/workflow_2_8.dtd">
<!-- 退库流程 -->
<workflow>
    <initial-actions>
        <action id="1" name="Start Workflow">
            <pre-functions>
                <function type="class">
                    <arg name="class.name">com.opensymphony.workflow.util.Caller</arg>
                </function>
            </pre-functions>
            <results>
                <!-- 开始工作流程 -->
                <unconditional-result old-status="Finished"
                    status="Underway" step="10">
                        <post-functions>
                            <function type="spring">
                                <arg name="bean.name">productReturn_FN</arg>
                                <arg name="method">startFlow</arg>
                            </function>
                        </post-functions>
                </unconditional-result>
            </results>
        </action>
    </initial-actions>
    <steps>
        <step id="10" name="开始">
           <meta name="OS_StepShowFlag">1</meta>
           <meta name="OS_StepShowText">100</meta>
           <meta name="OS_StepShowOrder">1</meta>
           <meta name="OS_Rule">{"ThirdPartyFlag":"2","RuleType":"4","RuleOnFlowCode":"productReturn","RuleOnStep":[10],"RuleContext":[]}</meta>
            <actions>
                <action id="101" name="向ps表中写状态" auto="true">
                    <results>                       
                        <unconditional-result old-status="Finished" status="Underway" step="20">
                                <pre-functions>
                                      <function type="beanshell">
                                            <arg name="script">
                                                 propertySet.setString("OS_StepShowOrder","1")
                                            </arg>
                                      </function>
                                </pre-functions>
                        </unconditional-result>
                    </results>
                </action>
            </actions>
        </step>
        <step id="20" name="提交确认退库">
           <meta name="OS_StepShowFlag">1</meta>
           <meta name="OS_StepShowText">101</meta>
           <meta name="OS_StepShowOrder">2</meta>
            <actions>
                <action id="201" name="提交确认退库" auto="true">
                    <pre-functions>
                       <function type="beanshell">
                            <arg name="script">
                                propertySet.setString("OS_StepShowOrder","2")
                            </arg>
                        </function>
                        <function type="spring">
                            <arg name="bean.name">productReturn_FN</arg>
                            <arg name="method">stockInOutCounter</arg>
                        </function>
                    </pre-functions>
                    <results>
                        <!-- 跳转向  审核判定 -->          
                        <unconditional-result old-status="Finished" status="Underway" step="50">
                        </unconditional-result>
                    </results>
                </action>
            </actions>
        </step>
        <step id="50" name="确认退库">
            <!-- 将工作流的当前业务状态设置为       退库单审核 -->
            <meta name="OS_Rule">{"ThirdPartyFlag":"2","RuleType":"3","RuleOnFlowCode":"productReturn","RuleOnStep":[50],"RuleOnAction":[501],"RuleContext":[],"CanEditFlag":"true","PreferredFlag":"true"}</meta>
            <pre-functions>
                <function type="beanshell">
                    <arg name="script">
                         propertySet.setString("OS_Current_Operate","61")
                    </arg>
                </function>
                <function type="spring">
                    <arg name="bean.name">productReturn_FN</arg>
                    <arg name="method">updateRR</arg>
                    <arg name="VerifiedFlag">1</arg>
                </function>
                <function type="spring">
                    <arg name="bean.name">workFlowCommon_FN</arg>
                    <arg name="method">setParticipant</arg>
                </function>
                <function type="spring">
                    <arg name="bean.name">workFlowCommon_FN</arg>
                    <arg name="method">auditHandle</arg>
                </function>
            </pre-functions>
            <actions>
                <action id="501" name="确认退库">
                    <meta name="OS_ButtonNameCode">os.confirmRR</meta>
                    <meta name="OS_ButtonClass">icon-confirm</meta>
                    <meta name="OS_OperateCode">61</meta>
                    <meta name="OS_OperateResultCode">101</meta>
                    <meta name="OS_Rule">{"ThirdPartyFlag":"2","RuleType":"3","RuleOnFlowCode":"productReturn","RuleOnStep":[50],"RuleOnAction":[501,503],"RuleContext":[],"CanEditFlag":"true","PreferredFlag":"true"}</meta>
                    <results>
                        <unconditional-result old-status="Finished" status="Underway" step="51">
                        </unconditional-result>
                    </results>
                </action>
                <action id="502" name="自动执行确认退库">
                    <meta name="OS_DefaultAction"></meta>
                    <results>
                        <unconditional-result old-status="Finished" status="Underway" step="51">
                        </unconditional-result>
                    </results>
                </action>
                <action id="503" name="修改">
                    <meta name="OS_ButtonNameCode">os.edit</meta>
                    <meta name="OS_ButtonClass">icon-edit-big</meta>
                    <meta name="OS_ButtonScript">BINOLSTBIL12.modifyForm()</meta>
                    <meta name="OS_ButtonEdit"></meta>
                    <meta name="OS_Rule">{"ThirdPartyFlag":"2","RuleType":"3","RuleOnFlowCode":"productReturn","RuleOnStep":[50],"RuleOnAction":[501,503],"RuleContext":[],"CanEditFlag":"true","PreferredFlag":"true"}</meta>
                    <results>
                        <unconditional-result old-status="Finished" status="Underway" step="50">
                        </unconditional-result>
                    </results>
                </action>
            </actions>
        </step>
        <step id="51" name="审核通过">
            <meta name="OS_StepShowFlag">1</meta>
            <meta name="OS_StepShowText">115</meta>
            <meta name="OS_StepShowOrder">3</meta>
            <actions>
                <action id="511" name="向ps表中写状态" auto="true">
                    <results>
                        <unconditional-result old-status="Finished" status="Underway" step="60">
                            <pre-functions>
                                <function type="beanshell">
                                    <arg name="script">
                                        propertySet.setString("OS_StepShowOrder","3")
                                    </arg>
                                </function>
                                <function type="spring">
                                    <arg name="bean.name">productReturn_FN</arg>
                                    <arg name="method">updateRR</arg>
                                    <arg name="VerifiedFlag">2</arg>
                                </function>
                           </pre-functions>
                        </unconditional-result>
                    </results>
                </action>
            </actions>
        </step>
        <step id="60" name="出入库操作">
            <actions>
                <action id="61" name="写出入库表和库存表" auto="true">
                    <results>
                        <unconditional-result old-status="Finished" status="Underway" step="999">
                            <post-functions>
                                <function type="spring">
                                    <arg name="bean.name">productReturn_FN</arg>
                                    <arg name="method">stockInOut</arg>
                                </function>
                            </post-functions>
                        </unconditional-result>
                    </results>
                </action>
            </actions>
        </step>
        <step id="70" name="编辑">
            <!-- 将工作流的当前业务状态设置为        退库单编辑 -->
            <pre-functions>
                <function type="beanshell">
                    <arg name="script">
                         propertySet.setString("OS_Current_Operate","62")
                    </arg>
                </function>
                <function type="spring">
                    <arg name="bean.name">workFlowCommon_FN</arg>
                    <arg name="method">setParticipant</arg>
                </function>
            </pre-functions>
            <actions>
                <action id="71" name="os.submit_confirm">
                    <meta name="OS_ButtonNameCode">os.submit</meta>
                    <meta name="OS_ButtonClass">icon-confirm</meta>
                    <meta name="OS_OperateCode">62</meta>
                    <meta name="OS_OperateResultCode"></meta>
                    <results>
                        <unconditional-result old-status="Finished" status="Underway" step="20">
                                <post-functions>
                                    <function type="spring">
                                        <arg name="bean.name">productReturn_FN</arg>
                                        <arg name="method">RR_auditAgreeHand</arg>
                                    </function>
                                </post-functions>
                        </unconditional-result>
                    </results>
                </action>
            </actions>
        </step>
        <step id="999" name="Flow over">
            <meta name="OS_StepShowFlag">1</meta>
            <meta name="OS_StepShowText">999</meta>
            <meta name="OS_StepShowOrder">4</meta>
            <!-- 将工作流的当前业务状态设置为       工作流结束 -->
            <pre-functions>
                <function type="beanshell">
                    <arg name="script">
                         propertySet.setString("OS_Current_Operate","999");
                         propertySet.setString("OS_StepShowOrder","4");
                    </arg>
                </function>
                <function type="spring">
                    <arg name="bean.name">workFlowCommon_FN</arg>
                    <arg name="method">deleteUserTask</arg>
                </function>
            </pre-functions>
        </step>
    </steps>
</workflow>