    ]]>
	<include refid="BINOLCMINC99.updateSql" />
    <![CDATA[
        WHERE 
            BIN_ChannelID IN
    ]]>
	<iterate conjunction="," open="(" close=")" property="channelId">  
        #channelId[]#
