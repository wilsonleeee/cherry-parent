        <![CDATA[
			SELECT	COUNT(SORT_T1.BIN_CounterInfoID) AS count FROM (
		]]>
        <include refid="BINOLBSCNT07.counterPointPlanQuery" />
        <![CDATA[
			)SORT_T1
		]]>
    </select>

