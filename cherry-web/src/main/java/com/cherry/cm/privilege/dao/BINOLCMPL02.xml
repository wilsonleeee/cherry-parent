    <!-- 查询某一用户管辖的所有用户ID(权限类型为2时) -->
	<select id="getPositionID2List" parameterClass="java.util.HashMap" resultMap="BINOLCMPL02.PositionID">
		<![CDATA[
			SELECT
				T.BIN_EmployeeID,
				T.BIN_PositionCategoryID,
				MAX(T.PrivilegeFlag) AS PrivilegeFlag
			FROM
			(
				(SELECT					
					A.BIN_EmployeeID,					
					A.BIN_PositionCategoryID,
					1 AS PrivilegeFlag					
				FROM						
					Basis.BIN_Employee A,
					Basis.BIN_Employee B				
				WHERE						
					B.BIN_EmployeeID = #employeeId# AND		
					A.NodeID.IsDescendantOf(B.NodeID)=1	
				)										
				UNION				
				(SELECT				
					B.BIN_EmployeeID,					
					B.BIN_PositionCategoryID,
					0 AS PrivilegeFlag				
				FROM						
					Privilege.BIN_LikeEmployee A,
					Basis.BIN_Employee B			
				WHERE						
					A.BIN_EmployeeID = #employeeId# AND
					A.BIN_LikeEmployeeID = B.BIN_EmployeeID
				)	
			) T
			GROUP BY
				T.BIN_EmployeeID,
				T.BIN_PositionCategoryID			
		]]>
    </select>

