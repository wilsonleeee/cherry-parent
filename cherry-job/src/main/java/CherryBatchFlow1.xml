<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE workflow PUBLIC "-//OpenSymphony Group//DTD OSWorkflow 2.8//EN" "http://www.opensymphony.com/osworkflow/workflow_2_8.dtd">
<workflow>
	<registers>
		<register type="class" variable-name="logger">
			<arg name="class.name">com.cherry.cm.core.CherryFlowLogRegister</arg>
			<arg name="addInstanceId">true</arg>
		</register>
	</registers>
	<initial-actions>
		<action id="1000" name="开始">
			<pre-functions>
				<function type="beanshell">
					<arg name="script">
				<![CDATA[
				         batchDate = new Date();
	                     transientVars.get("logger").info("###########################BATCH任务于"+batchDate+"开始处理#####################################");
				]]>
					</arg>
				</function>
				<function type="class">
					<arg name="class.name">com.opensymphony.workflow.util.Caller</arg>
				</function>
			</pre-functions>
			<results>
				<unconditional-result old-status="Finished"
					status="Queued" step="50" owner="${caller}" />
			</results>
		</action>
	</initial-actions>
	<steps>
		<step id="50" name="促销下发处理">
			<actions>
				<action id="51" name="促销产品下发处理">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="status">Queued</arg>
								<arg name="class.name">com.opensymphony.workflow.util.StatusCondition</arg>
							</condition>
						</conditions>
					</restrict-to>
					<pre-functions>
						<function type="spring">
							<arg name="bean.name">binbessprm03_FN</arg>
						</function>
					</pre-functions>
					<results>
						<!-- 导入出错时停留在本步骤 -->
						<result old-status="Finished" status="ErrEnded" step="50">
							<conditions type="AND">
								<condition type="class">
									<arg name="class.name">com.cherry.cm.core.CherryResultCondition</arg>
									<arg name="Cherry_status">-1</arg>
								</condition>
							</conditions>
						</result>
						<!-- 执行成功跳转到下个动作 -->
						<unconditional-result old-status="Finished"
							status="Underway" step="50" />
					</results>
					<!-- 输出本次动作执行的结果 -->
					<post-functions>
						<function type="class">
							<arg name="class.name">com.cherry.cm.core.CherryFlowResultLog</arg>
						</function>
					</post-functions>
				</action>
				<action id="52" name="促销活动下发处理">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="status">Underway</arg>
								<arg name="class.name">com.opensymphony.workflow.util.StatusCondition</arg>
							</condition>
						</conditions>
					</restrict-to>
					<pre-functions>
						<function type="spring">
							<arg name="bean.name">binOLCM09_FN</arg>
						</function>
					</pre-functions>
					<results>
						<!-- 导入出错时停留在本步骤 -->
						<result old-status="Finished" status="ErrEnded" step="50">
							<conditions type="AND">
								<condition type="class">
									<arg name="class.name">com.cherry.cm.core.CherryResultCondition</arg>
									<arg name="Cherry_status">-1</arg>
								</condition>
							</conditions>
						</result>
						<!-- 执行成功跳转到下个动作 -->
						<unconditional-result old-status="Finished"
							status="FinishCherry" step="900" />
					</results>
					<!-- 输出本次动作执行的结果 -->
					<post-functions>
						<function type="class">
							<arg name="class.name">com.cherry.cm.core.CherryFlowResultLog</arg>
						</function>
					</post-functions>
				</action>
			</actions>
		</step>
		<step id="900" name="CherryBatch工作流程结束处理">
			<actions>
				<action id="901" name="结束CherryBatch工作流程">
					<restrict-to>
						<conditions type="AND">
							<condition type="class">
								<arg name="status">FinishCherry</arg>
								<arg name="class.name">com.opensymphony.workflow.util.StatusCondition</arg>
							</condition>
						</conditions>
					</restrict-to>
					<pre-functions>
						<function type="beanshell">
							<arg name="script">
				<![CDATA[
				         batchDate = new Date();
	                     transientVars.get("logger").info("###########################BATCH任务于"+batchDate+"结束处理#####################################");
				]]>
							</arg>
						</function>
					</pre-functions>
					<results>
						<unconditional-result old-status="Finished"
							status="Finished" step="999" />
					</results>
				</action>
			</actions>
		</step>
		<step id="999" name="流程结束">
		</step>
	</steps>
</workflow>
